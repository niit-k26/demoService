<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityControl">

    <Button
        android:id="@+id/btnStartMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="239dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="239dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="26dp"
        android:text="startMusic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnStopMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="46dp"
        android:layout_marginEnd="248dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="248dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="35dp"
        android:text="stopMusic"
        app:layout_constraintBottom_toTopOf="@+id/edtMil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStartMusic" />

    <Button
        android:id="@+id/btnSeekTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="193dp"
        android:layout_marginEnd="263dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="263dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="21dp"
        android:text="seekTo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtMil" />

    <EditText
        android:id="@+id/edtMil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="169dp"
        android:layout_marginRight="169dp"
        android:layout_marginTop="46dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="edtMil"
        app:layout_constraintBottom_toTopOf="@+id/btnSeekTo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStopMusic" />

    <Button
        android:id="@+id/btnBindService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="79dp"
        android:layout_marginEnd="263dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="263dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="32dp"
        android:text="Bind To Service"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSeekTo" />
</android.support.constraint.ConstraintLayout>